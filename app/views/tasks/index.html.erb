<p>List of tasks:</p>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %> - <input type='checkbox' <%= 'checked' if task.completed %>>
    <br>
    <%= link_to 'Edit task', edit_task_path(task) %> - <%= link_to 'Delete task', task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
    <br>
  <% end %>
</ul>

<br>
<%= link_to 'New task', new_task_path %></li>
